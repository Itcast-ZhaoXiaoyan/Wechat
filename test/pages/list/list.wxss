page {
    height: 100%;
}


/**导航栏列表**/

.list-tab {
    height: 106rpx;
    box-sizing: border-box;
    padding: 5px 10px;
}


/*列表采用flex布局 display:flex(父)
                  display:flex  flex:1(子)*/

.list-tab ul {
    display: flex;
    height: 72rpx;
    border: 1px solid #008842;
    border-radius: 12rpx;
}

.list-tab li {
    flex: 1;
    display: flex;
    font-size: 14px;
    /*flex布局居中代码*/
    justify-content: center;
    align-items: center;
    color: #008842;
}

.list-tab li.active {
    background: #008842;
    color: #fff;
}


/**下侧列表 list-box **/

.list-view {
    border-top: 1px solid #ccc;
}

.list-box {
    display: flex;
    padding: 5px 10px;
    border-bottom: 1px solid #aaa;
}

.list-image image {
    width: 170rpx;
    height: 170rpx;
}

.list-text {
    font-size: 14px;
    color: #666;
    background: url(/images/icons/btn-tabs_09.png) no-repeat right center;
    background-size: 60rpx;
}

.list-text .name {
    display: block;
    width: 500rpx;
    height: 100rpx;
    padding: 5px;
}

.list-text .txt {
    padding: 5px;
    color: #aaa;
}

.list-text .txt .price {
    font-size: 18px;
    color: red;
}

.swiper-box {
    height: 100%;
}

.scroll-box {
    height: 100%;
}